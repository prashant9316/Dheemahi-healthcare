    <section class="blog_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog_left_sidebar">
                        <h2 class="mb-4">Create New Blog</h2>
                        <form action="/create" method="post">
                            <div class="mt-10">
                                <label for="Title">Title of the Blog</label>
                                <input type="text" name="title" placeholder="Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Title'" required class="single-input">
                            </div>
                            <div class="mt-10">
                                <label for="Title">Blog Heading Image Link</label>
                                <input type="text" name="link" placeholder="Header Image Link" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Heading Image LInk'" required class="single-input">
                            </div>
                            <div class="mt-10">
                                <label for="description">Description of the Blog</label>
                                <input type="text" name="title" placeholder="Description" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Description'" required class="single-input">
                            </div>
                            <div class="mt-10">
                                <label for="Title">Blog Content 1</label>
                                <textarea class="single-textarea" placeholder="Blog Content 1" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Blog Content 1'" required></textarea>
                            </div>
                            <div class="mt-10">
                                <label for="Title">Blog Quote</label>
                                <input type="text" name="title" placeholder="Blog Quote" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Blog Quote'" required class="single-input">
                            </div>
                            <div class="mt-10">
                                <label for="Title">Blog Inside Image Link 1</label>
